---
import { Code } from "astro:components";
import oneHunterThemeLight from "../../public/themes/one-hunter-light.json";
import oneHunterThemeDark from "../../public/themes/one-hunter-dark.json";

interface Props {
  className?: string;
  style?: string;
  code: string;
  lang: string;
  wrap?: boolean;
  inline?: boolean;
}

const { className, code, lang, wrap, inline, style } = Astro.props;
---

<Code
  class:list={[className, "!mt-0 !mb-0 transition-none"]}
  code={code}
  lang={lang as any}
  wrap={wrap}
  inline={inline}
  themes={{
    light: oneHunterThemeLight as any,
    dark: oneHunterThemeDark as any,
  }}
  style={style}
/>
