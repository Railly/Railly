---
import PeruFlag from "../brand/PeruFlag.astro";
import ClerkLogo from "../brand/ClerkLogo.astro";
import CrafterStationLogo from "../brand/CrafterStationLogo.astro";
import MidudevLogo from "../brand/MidudevLogo.astro";
import UNMSMLogo from "../brand/UNMSMLogo.astro";
import V0Logo from "../brand/V0Logo.astro";
import VercelLogo from "../brand/VercelLogo.astro";
import NextjsLogo from "../brand/NextjsLogo.astro";
import GitHubLogo from "../brand/GitHubLogo.astro";
import XLogo from "../brand/XLogo.astro";

interface Props {
    name: string;
    title: string;
}

const { name, title } = Astro.props;

const linkClass = "text-flexoki-tx font-medium underline decoration-flexoki-ui hover:bg-flexoki-tx hover:text-flexoki-bg transition-colors";
---

<header class="flex gap-2 items-center justify-start w-full">
    <img
        src="/favicon/favicon-32x32.png"
        alt="Railly Hugo favicon"
        class="size-5"
    />
    <h1 class="text-lg tracking-tight font-medium text-flexoki-tx">
        {name}
    </h1>
    <span class="text-sm text-flexoki-tx-2"> ~ </span>
    <span class="text-base font-serif text-flexoki-tx-2 font-light">
        {title}
    </span>
    <PeruFlag />
</header>

<section class="flex flex-col gap-2">
    <p class="text-base text-flexoki-tx-2 !m-0">
        I'm a <i>software engineer</i> at <ClerkLogo
            width={16}
            height={16}
            class="inline-block mb-0.5 align-text-bottom"
        /><a
            href="https://clerk.com"
            target="_blank"
            class={linkClass}>Clerk</a
        > and founder of <CrafterStationLogo
            width={16}
            height={16}
            class="inline-block mb-0.5 mr-0.5 align-text-bottom"
        /><a
            href="https://github.com/crafter-station"
            target="_blank"
            class={linkClass}>Crafter Station</a
        >.
    </p>

    <p class="text-base text-flexoki-tx-2 !m-0">
        I teach Parallel Computing at <UNMSMLogo
            width={16}
            height={16}
            class="inline-block !my-0 !ml-0 mr-0.5 align-text-bottom rounded-sm"
        /><a
            href="https://unmsm.edu.pe"
            target="_blank"
            class={linkClass}>UNMSM</a
        > and build platforms with <MidudevLogo
            width={18}
            height={16}
            class="inline-block mb-0.5 mr-0.5 align-text-bottom"
        /><a
            href="https://midu.dev"
            target="_blank"
            class={linkClass}>Midudev</a
        >, the leading Hispanic tech streamer.
    </p>

    <p class="text-base text-flexoki-tx-2 !m-0">
        Winner of the <NextjsLogo
            width={16}
            height={16}
            class="inline-block mb-0.5 mr-0.5 align-text-bottom"
        /><a
            href="https://luma.com/vsi4m4l8"
            target="_blank"
            class={linkClass}>Next.js Global Hackathon 2025</a
        >. Find my work on <GitHubLogo
            width={14}
            height={14}
            class="inline-block mb-0.5 mr-0.5 align-text-bottom"
        /><a
            href="https://github.com/railly"
            target="_blank"
            class={linkClass}>GitHub</a
        > and <a
            href="https://x.com/raillyhugo"
            target="_blank"
            aria-label="X (Twitter)"
            class="inline-block underline decoration-flexoki-ui hover:bg-flexoki-tx hover:text-flexoki-bg transition-colors"
        ><XLogo
            width={14}
            height={14}
            class="mb-0.5 align-text-bottom"
        /></a>, or <a
            href="/about"
            class={linkClass}>get to know me</a
        >.
    </p>

    <div class="flex flex-wrap gap-2 mt-3">
        <a
            href="https://v0.app/@railly"
            target="_blank"
            class="group inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md border border-flexoki-ui/50 hover:border-flexoki-ui transition-all duration-200"
        >
            <V0Logo width={16} height={16} class="text-flexoki-tx" />
            <span
                class="text-xs text-flexoki-tx-2 group-hover:text-flexoki-tx transition-colors"
                >Ambassador</span
            >
        </a>
        <a
            href="https://github.com/Railly/tinte"
            target="_blank"
            class="group inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md border border-flexoki-ui/50 hover:border-flexoki-ui transition-all duration-200"
        >
            <VercelLogo width={10} height={10} class="text-flexoki-tx" />
            <span
                class="text-xs text-flexoki-tx-2 group-hover:text-flexoki-tx transition-colors"
                >Vercel OSS Fall 2025</span
            >
        </a>
    </div>
</section>
