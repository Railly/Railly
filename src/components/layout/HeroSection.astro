---
import PeruFlag from "../brand/PeruFlag.astro";
import ClerkLogo from "../brand/ClerkLogo.astro";
import V0Logo from "../brand/V0Logo.astro";
import VercelLogo from "../brand/VercelLogo.astro";

interface Props {
    name: string;
    title: string;
}

const { name, title } = Astro.props;
---

<header class="flex gap-2 items-center justify-start w-full">
    <img
        src="/favicon/favicon-32x32.png"
        alt="Railly Hugo favicon"
        class="size-5"
    />
    <h1 class="text-lg tracking-tight font-medium text-flexoki-tx">
        {name}
    </h1>
    <span class="text-sm text-flexoki-tx-2"> ~ </span>
    <span class="text-base font-serif text-flexoki-tx-2 font-light">
        {title}
    </span>
    <PeruFlag />
</header>

<section class="flex flex-col gap-2">
    <p class="text-base text-flexoki-tx !m-0">
        I work as a <i>software engineer</i> at <ClerkLogo
            width={16}
            height={16}
            class="inline-block mb-0.5 align-text-bottom"
        />
        <a
            href="https://clerk.com"
            target="_blank"
            class="text-flexoki-tx underline">Clerk</a
        >. I also create open-source tools and projects that push the boundaries
        of UI and developer experience.
    </p>

    <p class="text-base text-flexoki-tx !m-0">
        Find my work on <a
            href="https://github.com/railly"
            target="_blank"
            class="text-flexoki-tx underline">GitHub</a
        > and <a
            href="https://x.com/raillyhugo"
            target="_blank"
            class="text-flexoki-tx underline">ùïè / Twitter</a
        >.
    </p>

    <div class="flex flex-wrap gap-2 mt-3">
        <a
            href="https://v0.app/@railly"
            target="_blank"
            class="group inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md border border-flexoki-ui/50 hover:border-flexoki-ui transition-all duration-200"
        >
            <V0Logo width={16} height={16} class="text-flexoki-tx" />
            <span
                class="text-xs text-flexoki-tx-2 group-hover:text-flexoki-tx transition-colors"
                >Ambassador</span
            >
        </a>
        <a
            href="https://github.com/Railly/tinte"
            target="_blank"
            class="group inline-flex items-center gap-1.5 px-2.5 py-1 rounded-md border border-flexoki-ui/50 hover:border-flexoki-ui transition-all duration-200"
        >
            <VercelLogo width={10} height={10} class="text-flexoki-tx" />
            <span
                class="text-xs text-flexoki-tx-2 group-hover:text-flexoki-tx transition-colors"
                >Vercel OSS Fall 2025</span
            >
        </a>
    </div>
</section>
