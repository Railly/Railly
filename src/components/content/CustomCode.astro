---
import { Code } from "astro:components";
import vesperTheme from "../../../public/themes/vesper-flexoki.json";
import oneHunterThemeLight from "../../../public/themes/one-hunter-light.json";

interface Props {
	className?: string;
	style?: string;
	code: string;
	lang: string;
	wrap?: boolean;
	inline?: boolean;
}

const { className, code, lang, wrap, inline, style } = Astro.props;
---

<Code
    class:list={[className, "!mt-0 !mb-0 transition-none"]}
    code={code}
    lang={lang as any}
    wrap={wrap}
    inline={inline}
    themes={{
        light: oneHunterThemeLight as any,
        dark: vesperTheme as any,
    }}
    style={style}
/>
