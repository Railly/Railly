---
interface Props {
	src: string;
	alt: string;
	caption?: string;
	size?: "sm" | "md" | "lg" | "full";
}

const { src, alt, caption, size = "md" } = Astro.props;

const maxWidths = {
	sm: "max-w-xs",
	md: "max-w-md",
	lg: "max-w-lg",
	full: "max-w-full",
};
---

<figure class={`not-prose my-8 mx-auto ${maxWidths[size]}`}>
	<img
		src={src}
		alt={alt}
		class="w-full rounded-xl border border-flexoki-ui/50"
		loading="lazy"
	/>
	{caption && (
		<figcaption class="mt-3 text-center text-sm text-flexoki-tx-3 font-serif italic">
			{caption}
		</figcaption>
	)}
</figure>
