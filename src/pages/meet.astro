---
const ogImageUrl = "https://railly.dev/images/meet-og.png";
const redirectUrl = "https://calendar.notion.so/meet/railly/hugo";

// OG meta
Astro.response.headers.set("Cache-Control", "no-cache");
Astro.response.headers.set("Refresh", `0;url=${redirectUrl}`);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Meet Railly Hugo</title>
    <meta name="description" content="Book a time to meet with Railly Hugo." />
    <!-- Open Graph tags -->
    <meta property="og:title" content="Meet Railly Hugo" />
    <meta
      property="og:description"
      content="Book a time to meet with Railly Hugo."
    />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://railly.dev/meet" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Railly Hugo" />
    <meta
      name="twitter:description"
      content="Software Engineer and UI Developer from Lima. Dive into my projects, tutorials, and digital explorations. Always learning, always crafting."
    />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta http-equiv="refresh" content={`0;url=${redirectUrl}`} />
  </head>
  <body>
    <p>Redirecting to scheduling page...</p>
  </body>
</html>
